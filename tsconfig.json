{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "baseUrl": "./"
  },
  "include": ["**/*.ts", "src/setup.ts", "serial.js", "src/app.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.js"]
}
